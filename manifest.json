{
  "manifest_version": 3,
  "name": "LeetCode Friends",
  "version": "1.0",
  "description": "LeetCode Friends is a Chrome extension that lets you add friends and track their LeetCode progress in a glance, right from within leetcode.com! ",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": ["<all_urls>"],
  "content_scripts": [
    {
      "matches": ["https://leetcode.com/*"],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["username_obtainer.js", "popup_content.html"],
      "matches": ["https://leetcode.com/*"]
    }
  ]
}
